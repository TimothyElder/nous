{
  "name": "nous",
  "displayName": "Nous",
  "description": "A companion for writers and researchers using plaintext files.",
  "icon": "data/anaxagoras.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/TimothyElder/nous"
  },
  "publisher": "TimothyElder",
  "license": "MIT",
  "version": "0.1.6",
  "engines": {
    "vscode": "^1.95.0"
  },
  "contributors": [
    "notZaki (PandocCiter autocomplete functionality)"
  ],
  "activationEvents": [
    "onCommand:nous.setBackendCommand"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Nous",
      "properties": {
        "nous.openaiAPIkey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key for making requests. This is required for Nous to work."
        },
        "nous.backend": {
          "type": "string",
          "enum": [
            "openai",
            "llama"
          ],
          "default": "openai",
          "description": "Choose the backend for grammar and spelling checks."
        },
        "nous.llamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434/api/chat",
          "description": "Endpoint for the locally hosted Llama 3.2 server."
        },
        "nous.ViewType": {
          "type": "string",
          "enum": [
            "inline",
            "browser"
          ],
          "default": "inline",
          "description": "How citation completions are shown"
        },
        "nous.RootFile": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "Main document containing YAML for bibliography"
        },
        "nous.ShowLog": {
          "type": "boolean",
          "default": true,
          "description": "Should log be shown in Output panel"
        },
        "nous.DefaultBib": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "Path to default bib file"
        },
        "nous.DefaultBibs": {
          "type": "array",
          "default": [],
          "scope": "resource",
          "description": "Path to default bib files"
        },
        "nous.UseDefaultBib": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Whether to use the Default Bib"
        },
        "nous.ForgetUnusedBib": {
          "type": "boolean",
          "default": true,
          "description": "Whether to forget bib file when changing documents"
        },
        "nous.CitationFormat": {
          "type": "array",
          "default": [
            "author",
            "title",
            "journal",
            "container-title",
            "publisher",
            "booktitle",
            "year"
          ],
          "description": "List of fields displayed in preview"
        },
        "nous.CrossRefMode": {
          "type": "string",
          "default": "full",
          "description": "The features of CrossRef functionalities to enable",
          "enum": [
            "full",
            "minimal",
            "none"
          ]
        }
      },
      "nousCiter.ViewType": {
          "type": "string",
          "enum": [
            "inline",
            "browser"
          ],
          "default": "inline",
          "description": "How citation completions are shown"
        },
        "nousCiter.RootFile": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "Main document containing YAML for bibliography"
        },
        "nousCiter.ShowLog": {
          "type": "boolean",
          "default": false,
          "description": "Should log be shown in Output panel"
        },
        "nousCiter.DefaultBib": {
          "type": "string",
          "default": "",
          "scope": "resource",
          "description": "Path to default bib file"
        },
        "nousCiter.DefaultBibs": {
          "type": "array",
          "default": [],
          "scope": "resource",
          "description": "Path to default bib files"
        },
        "nousCiter.UseDefaultBib": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Whether to use the Default Bib"
        },
        "nousCiter.ForgetUnusedBib": {
          "type": "boolean",
          "default": true,
          "description": "Whether to forget bib file when changing documents"
        },
        "nousCiter.CitationFormat": {
          "type": "array",
          "default": [
            "author",
            "title",
            "journal",
            "container-title",
            "publisher",
            "booktitle",
            "year"
          ],
          "description": "List of fields displayed in preview"
        },
        "nousCiter.CrossRefMode": {
          "type": "string",
          "default": "full",
          "description": "The features of CrossRef functionalities to enable",
          "enum": [
            "full",
            "minimal",
            "none"
          ]
        }
    },
    "grammars": [
      {
        "scopeName": "markdown.nous.injection",
        "path": "./syntaxes/nous-markdown.injection.json",
        "injectTo": ["text.html.markdown"]
      },
      {
        "injectTo": [
          "text.html.markdown",
          "text.html.markdown.redcarpet",
          "source.pweave.md"
        ],
        "scopeName": "pandoc-citation",
        "path": "./syntaxes/citations.json"
      }
    ],
    "languages": [
      {
        "id": "markdown",
        "aliases": [
          "Markdown",
          "markdown"
        ],
        "extensions": [
          ".md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "nous.removeNewlines",
        "title": "Nous: Remove Newlines in Selection"
      },
      {
        "command": "nous.Anonymize",
        "title": "Nous: Replace Text with Underscores"
      },
      {
        "command": "nous.compileMarkdown",
        "title": "Nous: Compile Markdown"
      },
      {
        "command": "nous.testApiConnection",
        "title": "Nous: Test API Connection"
      },
      {
        "command": "nous.identifyErrors",
        "title": "Nous: Identify Spelling and Grammar Errors"
      },
      {
        "command": "nous.acceptCorrection",
        "title": "Nous: Accept Correction"
      },
      {
        "command": "nous.setBackend",
        "title": "Nous: Set Backend LLM"
      },
      {
        "command": "nous.rejectCorrection",
        "title": "Nous: Reject Suggestion"
      },
      {
        "command": "nous.setApiKey",
        "title": "Nous: Set OpenAI API Key"
      },
      {
        "command": "nous.clearApiKey",
        "title": "Nous: Clear OpenAI API Key"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^14.18.63",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "asynckit": "^0.4.0",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "typescript": "^4.5.4",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "latex-utensils": "^6.2.0",
    "node-fetch": "^2.7.0",
    "openai": "^4.73.0",
    "whatwg-url": "^14.0.0"
  }
}
