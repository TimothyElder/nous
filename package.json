{
  "name": "nous",
  "displayName": "Nous",
  "description": "A companion for writers and researchers using plaintext files.",
  "icon": "data/anaxagoras.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/TimothyElder/nous"
  },
  "publisher": "Timothy B. Elder",
  "license": "MIT",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.95.0"
  },
  "activationEvents": [
    "onCommand:nous.setBackendCommand",
    "onCommand:nous.identifyErrors",
    "onCommand:nous.testApiConnection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Nous",
      "properties": {
        "nous.openaiAPIkey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key for making requests. This is required for Nous to work."
        },
        "nous.backend": {
          "type": "string",
          "enum": ["openai", "llama"],
          "default": "openai",
          "description": "Choose the backend for grammar and spelling checks."
        },
        "nous.llamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434/api/chat",
          "description": "Endpoint for the locally hosted Llama 3.2 server."
        }
      }
    },
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "text.html.markdown",
        "path": "./syntaxes/markdown.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "markdown",
        "aliases": [
          "Markdown",
          "markdown"
        ],
        "extensions": [
          ".md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[markdown]": {
        "editor.tokenColorCustomizations": {
          "textMateRules": [
            {
              "scope": "comment.block.curlybrackets",
              "settings": {
                "foreground": "#ADD8E6",
                "fontStyle": "italic"
              }
            }
          ]
        }
      }
    },
    "commands": [
      {
        "command": "nous.removeNewlines",
        "title": "Nous: Remove Newlines in Selection"
      },
      {
        "command": "nous.Anonymize",
        "title": "Nous: Replace Text with Underscores"
      },
      {
        "command": "nous.compileMarkdown",
        "title": "Nous: Compile Markdown"
      },
      {
        "command": "nous.testApiConnection",
        "title": "Nous: Test API Connection"
      },
      {
        "command": "nous.identifyErrors",
        "title": "Nous: Identify Spelling and Grammar Errors"
      },
      {
        "command": "nous.acceptCorrection",
        "title": "Nous: Accept Correction"
      },
      {
        "command": "nous.setBackend",
        "title": "Nous: Set Backend LLM"
      },
      {
        "command": "nous.rejectCorrection",
        "title": "Nous: Reject Suggestion"
      },
      {
        "command": "nous.setApiKey",
        "title": "Nous: Set OpenAI API Key"
      },
      {
        "command": "nous.clearApiKey",
        "title": "Nous: Clear OpenAI API Key"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "14.x",
    "@types/node-fetch": "^2.6.12",
    "@types/vscode": "^1.95.0",
    "asynckit": "^0.4.0",
    "eslint": "^8.5.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "openai": "^4.73.0",
    "whatwg-url": "^14.0.0"
  }
}
