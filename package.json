{
  "name": "nous",
  "displayName": "Nous",
  "description": "A companion for writers and researchers using plaintext files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nous.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "nous.removeNewlines",
        "title": "Nous: Remove Newlines in Selection"
      },
      {
        "command": "nous.Anonymize",
        "title": "Nous: Replace text with undesrcores"
      },
      {
        "command": "nous.compileMarkdown",
        "title": "Nous: Compile Markdown with Template"
      },
      {
        "command": "nous.testApiConnection",
        "title": "Nous: Test API Connection"
    }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "openai": "^4.72.0"
  }
}
